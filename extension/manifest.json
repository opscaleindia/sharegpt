{
  "name": "ShareGPT: Share your ChatGPT conversations",
  "description": "ShareGPT is a Chrome extension that lets you your wildest ChatGPT conversations with one click.",
  "version": "1.0.95",
  "manifest_version": 3,
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    },
    "default_title": "Login to ShareGPT",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["search.js", "modal.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://chat.openai.com/*", "http://localhost/*"],
      "js": ["index.js"],
      "run_at": "document_end"
    }
  ]
  // "host_permissions": [
  //   "https://sharegpt.opscale.io/*",
  //   "http://localhost/*"
  // ]
}
